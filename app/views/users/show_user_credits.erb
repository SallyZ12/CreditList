<h3> Hello, <%=current_user.username%> </h3>

<p> Your List of Credits: </p>

<h4 style = "color:red;"><% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %></h4>

<head>
 <style>
 table, th, td {
     border: 1px solid blue;
 }
 </style>
 </head>
<table>
  <table style="width:50%">
    
      <tr>
          <th> Credit ID </th>
          <th> Credit Name </th>
          <th> Sector </th>
          <th> Rating </th>
      </tr>
      <tr>
        <% current_user.credits.order("credit_name").each do |credit|%>
          <td> <%=credit.id%> </td>
        <td> <a href= "/credits/<%=credit.id%>"><%=credit.credit_name%></a></td>
          <td> <%=credit.sector%> </td>
          <td> <%=credit.rating%> </td>
        </tr>
    <%end%>
  </table>
